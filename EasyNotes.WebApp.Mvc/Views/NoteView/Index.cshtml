@model IEnumerable<Note>
@{
    ViewData["Title"] = "Notes";
}

<h1>Notes</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h4 class="text-primary">Notes List</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="NoteView" asp-action="Create" class="btn btn-success ">
                <i class="bi bi-plus-circle"></i>  &nbsp;  Create New Note
            </a>
        </div>
    </div>
    <br/>
   

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m=>m.Name)</th>
            <th>Message</th>
            <th>@Html.DisplayNameFor(m=>m.Category)</th>
            <th>Picture</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.Content
                </td>
                <td width="50%">
                    @Html.DisplayFor(m => obj.Category.CategoryName)
                </td>
                <td width="100%">
                    @obj.Img
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="NoteView" asp-action="Edit" asp-route-id="@obj.Id" type="button" class="btn btn-outline-success mt-1 mx-1"><i class="bi bi-pencil-square"></i>Edit</a> 
                        <a asp-controller="NoteView" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mt-1 mx-1"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                     <div class="w-100 btn-group" role="group">
                       
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>