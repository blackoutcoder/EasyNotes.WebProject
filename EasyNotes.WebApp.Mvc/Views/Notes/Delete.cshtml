@model Note

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-primary">Delete Note</h4>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Content"></label>
            <input asp-for="Content" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Img"></label>
            <input asp-for="Img" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Category"></label>
            <input asp-for="Category" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger style="width:150px">Delete</button>
        <a asp-controller="Notes" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
