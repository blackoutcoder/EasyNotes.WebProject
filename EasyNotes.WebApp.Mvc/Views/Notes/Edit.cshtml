@model Note


<form method="post" asp-action="Edit">
    <input hidden asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-primary">Edit Note</h4>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Content"></label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Img"></label>
            <input asp-for="Img" class="form-control" />
             <a asp-controller="Notes" asp-action="UploadImage" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i>  &nbsp;  Add Image
            </a>
        </div>
        <div class="mb-3">
            <label asp-for="Category.CategoryName"></label>
            <input asp-for="Category.CategoryName" class="form-control" value=""/>
            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            <label asp-for="Category.Description"></label>
            <input asp-for="Category.Description" class="form-control" value=""/>
            <span asp-validation-for="Category.Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Notes" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
