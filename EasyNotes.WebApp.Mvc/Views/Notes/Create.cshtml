@model Note

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h4 class="text-primary">Create Note</h4>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Content"></label>
            <input asp-for="Content" class="form-control" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Img"></label>
            <input asp-for="Img" class="form-control" value=""/>
            <a asp-controller="Notes" asp-action="UploadImage" class="btn btn-outline-warning mt-3">
                <i class="bi bi-plus-circle"></i>  &nbsp;  Add Image
            </a>
            <br/><br/>
        </div>
        <div class="mb-3 " >
            <label asp-for="Category"></label>
            <input asp-for="Category.CategoryName" class="form-control mt-2" value="Enter category name..." />
            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            <input asp-for="Category.Description" class="form-control mt-2" value="Description..." />
            <span asp-validation-for="Category.Description" class="text-danger"></span>
            <a  asp-controller="Notes" asp-action="AddCategory" class="btn btn-outline-warning mt-3">
                <i class="bi bi-plus-circle"></i>  &nbsp;  Add Category
            </a>
        </div>
        <br/><br/>
        <button type="submit" class="btn btn-outline-success" style="width:150px">Create</button>
        <a asp-controller="Notes" asp-action="Index" class="btn btn-outline-secondary" style="width:180px">
            Back to list
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
