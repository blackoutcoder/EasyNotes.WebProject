@model IEnumerable<PublicNote>
@{
    ViewData["Title"] = "Public Notes";
}

<h1 class="mt-5">Public Notes</h1>

<h3>Your notes will stay here forever!</h3>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h4 class="text-primary">Notes List</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="PublicNotes" asp-action="Create" class="btn btn-success ">
                <i class="bi bi-plus-circle"></i>  &nbsp;  Create New Note
            </a>
        </div>
    </div>
    <br/>
   
<form asp-action="ShowSearchResults">
    <input asp-controller="PublicNotes" asp-action="ShowSearchForm" type="submit" value="Search" class="btn btn-outline-info mb-2" />
 </form>  
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Message</th>
            <th>Create Date/Time</th>
            <th>Send this code to anybody</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.Content
                </td>
                 <td width="50%">
                    @obj.CreateDate
                </td>
                <td width="50%">
                    @obj.Id
                </td>
            </tr>
        }
    </tbody>
</table>
</div>